html
    head
        title Art Gallery
    body
    include ../partials/patronHeader
	
    br
    br
	
    div.artwork-grid
        each artwork in artworks
            a.artwork-card(href="/artwork/" + artwork._id)
                figure
                    img.artwork-image(src=artwork.Poster alt=artwork.Title)
                    figcaption
                        h3.artwork-title #{artwork.Title}
                        p.artwork-artist Artist: #{artwork.Artist.username}

    div.pagination
        if current > 1
            - let prevUrl = "/artwork?page=" + (current-1) + (qstring.length > 0 ? "&" + qstring : "")
            a.pagination-button(href=prevUrl) Previous
        - let nextUrl = "/artwork?page=" + (current+1) + (qstring.length > 0 ? "&" + qstring : "")
        if found ===10
            a.pagination-button(href=nextUrl) Next

